<div class="max-w-2xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold text-gray-900">Adicionar Novo Streamer</h1>
    <%= link_to "Voltar", twitch_streamers_path, class: "text-purple-600 hover:text-purple-700" %>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6">
    <%= form_with(model: @streamer, class: "space-y-6") do |f| %>
      <% if @streamer.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
          <h2 class="font-semibold mb-2">Erro ao adicionar streamer:</h2>
          <ul class="list-disc list-inside">
            <% @streamer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :username, "Nome de usuário da Twitch", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :username, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500", placeholder: "Ex: tacocs" %>
        <p class="mt-1 text-sm text-gray-500">Digite o nome de usuário exato do streamer na Twitch</p>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Adicionar Streamer", class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors duration-200" %>
      </div>
    <% end %>
  </div>
</div> 